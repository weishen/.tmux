#unbind-key right    ; bind-key -n M-l     select-pane -R
#unbind-key up       ; bind-key -n M-j     select-pane -U
#unbind-key down     ; bind-key -n M-k     select-pane -D

unbind-key left     ; bind-key left     select-pane -L
